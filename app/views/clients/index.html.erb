<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Lista de Clientes</h1>

    <div>
      <%= link_to new_client_path, class: "btn btn-primary me-2" do %>
        <i class="bi bi-person-plus"></i> Nuevo Cliente
      <% end %>

        <%= button_to logout_path,
              method: :delete,
              data: { confirm: "¿Deseas cerrar sesión?" },
              style: "margin-top: 6%;", 
              class: "btn btn-outline-danger" do %>
            <i class="bi bi-box-arrow-right"></i> Cerrar sesión
        <% end %>
    </div>
  </div>

  <div class="card shadow-sm border-0">
    <div class="card-body">
      <% if @clients.present? %>
        <div class="table-responsive">
          <table class="table table-striped table-hover align-middle mb-0">
            <thead class="table-dark">
              <tr>
                <th>Nombre</th>
                <th>Email</th>
                <th>Teléfono</th>
                <th class="text-center">Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% @clients.each do |c| %>
                <tr>
                  <td><%= c["name"] %></td>
                  <td><%= c["email"] %></td>
                  <td><%= c["phone"] %></td>
                  <td class="text-center d-flex justify-content-center gap-2">
                    <%= link_to edit_client_path(c["id"]), class: "btn btn-sm btn-outline-primary" do %>
                      <i class="bi bi-pencil-square"></i> Editar
                    <% end %>

                    <%= button_to client_path(c["id"]),
                                  method: :delete,
                                  data: { confirm: "¿Estás seguro de eliminar este cliente?" },
                                  class: "btn btn-sm btn-outline-danger" do %>
                      <i class="bi bi-trash3"></i> Eliminar
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-center text-muted my-4">
          <i class="bi bi-people"></i> No hay clientes registrados aún.
        </p>
      <% end %>
    </div>
  </div>
</div>

<style>
  body {
    background-color: #f8f9fa;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }

  .card {
    border-radius: 15px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
    transition: transform 0.2s;
  }

  .card:hover {
    transform: translateY(-5px);
  }

  .table-hover tbody tr:hover {
    background-color: #e9f5ff;
  }

  .btn-outline-primary,
  .btn-outline-danger {
    border-radius: 50px;
    padding: 0.35rem 1rem;
    transition: all 0.2s ease;
  }

  .btn-outline-primary:hover {
    background-color: #0d6efd;
    color: #fff;
    transform: translateY(-2px);
  }

  .btn-outline-danger:hover {
    background-color: #dc3545;
    color: #fff;
    transform: translateY(-2px);
  }

  .btn-primary {
    background: linear-gradient(45deg, #007bff, #00c6ff);
    border: none;
    box-shadow: 0 4px 10px rgba(0, 123, 255, 0.3);
    transition: all 0.2s;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 15px rgba(0, 123, 255, 0.4);
  }

  h1 {
    color: #343a40;
    font-weight: 600;
  }
</style>
