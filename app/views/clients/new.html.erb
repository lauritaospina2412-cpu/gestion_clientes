<div class="row justify-content-center mt-5">
  <div class="col-md-6">
    <div class="card shadow p-4">
      <h2 class="text-center mb-4">Crear Cliente</h2>

        <%= form_with url: clients_path, scope: :client, local: true, class: "card p-4 shadow" do |f| %>


            <div class="mb-3">
                <%= f.label :name, "Nombre", class: "form-label" %>
                <%= f.text_field :name, class: "form-control", required: true %>
            </div>

            <div class="mb-3">
                <%= f.label :email, "Email", class: "form-label" %>
                <%= f.email_field :email, class: "form-control", required: true %>
            </div>

            <div class="mb-3">
                <%= f.label :phone, "TelÃ©fono", class: "form-label" %>
                <%= f.text_field :phone, class: "form-control", required: true %>
            </div>

            <%= f.submit "Crear Cliente", class: "btn btn-primary w-100" %>
        <% end %>

      <%= link_to "Volver", clients_path, class: "btn btn-secondary w-100 mt-2" %>
    </div>
  </div>
</div>
